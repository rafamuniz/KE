@using KarmicEnergy.Web.Areas.Admin.ViewModels.TankModel
@using Munizoft.Extensions
@using Munizoft.MVC.Helpers

@model CreateViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "Tank Model - Create";
}

@using (Html.BeginForm("Create", "TankModel", new { area = "Admin" }, FormMethod.Post, new { id = "formCreateTank", enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_Error")

    <div class="form-horizontal">
        <div class="col-md-1">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        </div>
        <div class="col-md-11 form-group">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-12 form-group">
            <div class="col-md-1">
                @Html.LabelFor(m => m.Image, new { @class = "control-label" })
            </div>
            <div class="col-md-11 form-group">
                <input type="file" name="Image" />
                @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-1">
            @Html.LabelFor(m => m.Status, new { @class = "control-label" })
        </div>
        <div class="col-md-11 form-group">
            @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.Statuses, "Id", "Name"), "-- Please select a Status--", new { @class = "form-control selectpicker", style = "width: 250px;", id = "ddlStatus" })
            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-12 form-group text-center">
            <input type="submit" class="btn btn-default" value="SAVE">
            <a class="btn" href="/Admin/TankModel/">Cancel</a>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}