@using KarmicEnergy.Web.Areas.Customer.ViewModels.Monitoring
@using Munizoft.Extensions
@using Munizoft.MVC.Helpers
@using KarmicEnergy.Web.Extensions
@using GridMvc.Html

@model List<ListViewModel>

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "Monitoring";
}

@Styles.Render("~/Content/gridmvccss")

@Html.Grid(Model).Columns(columns =>
{
    if (!this.IsSite())
    {
        columns.Add(c => c.SiteName).Titled("Site")
            .Sortable(true)
            .Filterable(true);
    }

    columns.Add(c => c.PondName).Titled("Pond")
    .Sortable(true)
    .Filterable(true);

    columns.Add(c => c.TankName).Titled("Tank")
        .Sortable(true)
        .Filterable(true);

    columns.Add(c => c.SensorName).Titled("Sensor")
        .Sortable(true)
        .Filterable(true);

    columns.Add(c => c.ItemName).Titled("Item")
        .Sortable(true)
        .Filterable(true);

    columns.Add(c => c.Value).Titled("Value")
    .Sortable(true)
    .Filterable(true);

    columns.Add(c => c.EventDateLocal).Titled("Date")
        .Sortable(true)
        .Filterable(true);

    columns.Add()
     .Encoded(false)
     .Sanitized(false)
     .SetWidth(30)
     .RenderValueAs(o => @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-list-alt'></span>", "Detail", "Detail", "Monitoring", routeValues: new { id = o.Id, area = "Customer" }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" }));

}).WithPaging(30).Sortable(true).Filterable().WithMultipleFilters()

@section Scripts {
    @Scripts.Render("~/bundles/gridmvc")

    <script type="text/javascript">
        $(function () {
            showLoading();
            
            hideLoading();
        });
    </script>
}