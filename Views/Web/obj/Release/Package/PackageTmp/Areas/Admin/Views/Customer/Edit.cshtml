@using KarmicEnergy.Web.Areas.Admin.ViewModels.Customer
@using Munizoft.Extensions

@model EditViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "CUSTOMER - EDIT";
}

@using (Html.BeginForm("Edit", "Customer", new { area = "Admin" }, FormMethod.Post, new { id = "formCreateCustomer", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                </div>
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<EditViewModel>(m => m.Name) } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            @*<div class="box-sub">
                <div class="title green">
                    <h2>Info</h2>
                </div>
                @Html.Partial("_Address", Model.Address, new ViewDataDictionary() { TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "Address" } })
            </div>*@
        </div>
    </div>

    <div class="col-md-12 form-group text-center">
        <input type="submit" class="btn btn-default" value="SAVE">
        <a class="btn" href="/Admin/Customer/Index">Cancel</a>
    </div>
}
