<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Karmic Energy - @ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="wrapper-internal">
        <header class="main-header">
            <div class="logo">
                <!-- Logo -->
                <a href="/Home" class="logo">
                    <!-- mini logo for sidebar mini 50x50 pixels -->
                    <div class="logo-mini"><img src="images/logo_mni.png" alt="logo" title="Logo"></div>
                    @*<span class="logo-mini"><b>E</b>IM</span>*@

                    @*logo for regular state and mobile devices*@
                    <div class="logo-lg"><img src="images/logo.png" alt="logo" title="Logo"></div>
                    @*<span class="logo-lg"><b>ERP</b>IM</span>*@
                </a>
            </div>

            <div class="top-header">
                @Html.Partial("_LoginPartial")
            </div>
        </header>

        <section id="main-content">
            <aside class="main-sidebar">
                <section class="sidebar">
                    @Html.Partial("_MenuLeft")
                </section>
            </aside>

            <div class="content-wrapper">
                <section class="content">
                    <div class="row">
                        @RenderBody()
                    </div>
                </section>
            </div>
            <div class="clearfix"></div>
        </section>
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/slimscroll")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
