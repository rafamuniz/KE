
@using KarmicEnergy.Web.Areas.Customer.ViewModels.Sensor

@model SpotGPSViewModel

<div class="col-sm-12 col-md-12 col-lg-12">
    <div class="row">
        <div class="col-sm-12 box-sub">
            <div class="title green">
                <h2>SPOT GPS</h2>
            </div>

            <div class="row form-group">
                <div class="col-xs-5 col-sm-2 col-md-2 col-lg-3 col-xl-2">
                    @Html.LabelFor(m => m.SpotId, new { @class = "control-label" })
                </div>
                <div class="col-xs-7 col-sm-10 col-md-10 col-lg-5 col-xl-10">
                    @Html.EditorFor(m => m.SpotId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.SpotId, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-7 col-sm-10 col-md-10 col-lg-4 col-xl-10">
                    <button class="btn btn-default" type="button">FIND SPOT</button>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-5 col-sm-2 col-md-2 col-lg-3 col-xl-2">
                    @Html.LabelFor(m => m.SpotName, new { @class = "control-label" })
                </div>
                <div class="col-xs-7 col-sm-10 col-md-10 col-lg-9 col-xl-10">
                    @Html.EditorFor(m => m.SpotName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(m => m.SpotName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-5 col-sm-2 col-md-2 col-lg-3 col-xl-2">
                    @Html.LabelFor(m => m.Battery, new { @class = "control-label" })
                </div>
                <div class="col-xs-7 col-sm-10 col-md-10 col-lg-9 col-xl-10">
                    @Html.EditorFor(m => m.Battery, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(m => m.Battery, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-5 col-sm-2 col-md-2 col-lg-3 col-xl-2">
                    @Html.LabelFor(m => m.LastContact, new { @class = "control-label" })
                </div>
                <div class="col-xs-7 col-sm-10 col-md-10 col-lg-9 col-xl-10">
                    @Html.EditorFor(m => m.LastContact, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(m => m.LastContact, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-5 col-sm-2 col-md-2 col-lg-3 col-xl-2">
                    @Html.LabelFor(m => m.LastLocator, new { @class = "control-label" })
                </div>
                <div class="col-xs-7 col-sm-10 col-md-10 col-lg-9 col-xl-10">
                    @Html.EditorFor(m => m.LastLocator, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(m => m.LastLocator, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-5 col-sm-2 col-md-2 col-lg-3 col-xl-2">
                    @Html.LabelFor(m => m.Model, new { @class = "control-label" })
                </div>
                <div class="col-xs-7 col-sm-10 col-md-10 col-lg-9 col-xl-10">
                    @Html.EditorFor(m => m.Model, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(m => m.Model, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
    <div class="clearfix"></div>
</div>