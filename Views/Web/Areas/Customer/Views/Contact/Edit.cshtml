@using KarmicEnergy.Web.Areas.Customer.ViewModels.Contact
    @using Munizoft.Extensions

    @model EditViewModel

    @{
        Layout = "~/Views/Shared/_Internal.cshtml";
        ViewBag.Title = "Contact - Edit";
    }

    @using (Html.BeginForm("Edit", "Contact", new { area = "Customer" }, FormMethod.Post, new { id = "formEditUser", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="form-group">
                    <div class="col-md-2 col-lg-2">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                    </div>
                    <div class="col-md-10 col-lg-10">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = AttributeExtension.GetDisplayAttributeNameValue<EditViewModel>(m => m.Name) } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="box-sub">
                    <div class="title green">
                        <h2>Info</h2>
                    </div>
                    @Html.Partial("_Address", Model.Address, new ViewDataDictionary() { TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "Address" } })
                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-12 btn-submit text-center">
            <input type="submit" class="btn btn-default" value="SAVE">
            <a class="btn" href="/Customer/Contact/">Cancel</a>
        </div>
    }
