@using KarmicEnergy.Web.Areas.Customer.ViewModels.User
@using Munizoft.Extensions

@model EditViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "USER - EDIT";
}
<div id="body-content">
    @using (Html.BeginForm("Edit", "User", new { area = "Customer" }, FormMethod.Post, new { id = "formEditUser", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_Error")

        @Html.HiddenFor(m => m.Id)

        <div class="row">
            <div class="col-sm-2 text-right">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            </div>
            <div class="col-sm-10">
                <div class="form-group">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<CreateViewModel>(m => m.Name) } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2 text-right">
                @Html.LabelFor(m => m.IPAddress, new { @class = "control-label" })
            </div>
            <div class="col-lg-10 form-group">
                @Html.EditorFor(m => m.IPAddress, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<CreateViewModel>(m => m.IPAddress) } })
                @Html.ValidationMessageFor(m => m.IPAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2 text-right">
                @Html.LabelFor(m => m.Status, new { @class = "control-label" })
            </div>
            <div class="col-lg-10 form-group">
                @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.Statuses, "Id", "Name"), "-- Please select a Status--", new { @class = "form-control selectpicker", style = "width: 250px;", id = "ddlStatus" })
                @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 form-group text-center">
                <input type="submit" class="btn btn-default" value="SAVE">
                <a class="btn" href="/Customer/Site/Index">Cancel</a>
            </div>
        </div>
    }
</div>