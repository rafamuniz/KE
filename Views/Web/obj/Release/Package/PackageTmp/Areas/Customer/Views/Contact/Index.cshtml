@using KarmicEnergy.Web.Areas.Customer.ViewModels.Contact
@using Munizoft.Extensions
@using Munizoft.MVC.Helpers
@using GridMvc.Html

@model List<ListViewModel>

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "Contact";
}

@Styles.Render("~/Content/grid")


<div class="pull-right">
    @Html.NoEncodeActionLink("<span>CREATE</span>", "Add new Contact", "Create", "Contact", routeValues: new { area = "Customer" }, htmlAttributes: new { @class = "btn" })
</div>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Name).Titled("Name")
         .Filterable(true);
 
    columns.Add()
     .Encoded(false)
     .Sanitized(false)
     .SetWidth(30)
     .RenderValueAs(o => @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Contact", routeValues: new { id = o.Id, area = "Customer" }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" }));

    columns.Add()
     .Encoded(false)
     .Sanitized(false)
     .SetWidth(30)
     .RenderValueAs(o => @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "Contact", routeValues: new { id = o.Id, area = "Customer" }, htmlAttributes: new { data_modal = "", @class = "btn btn-default", onclick = "return confirm('Are you sure you wish to delete this registry?');" }));

}).WithPaging(10).Sortable(true).Filterable().WithMultipleFilters()


@section Scripts {
    @Scripts.Render("~/bundles/grid")
}
