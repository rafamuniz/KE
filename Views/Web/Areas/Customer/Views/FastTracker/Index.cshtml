@using KarmicEnergy.Web.Areas.Customer.ViewModels.FastTracker
@using KarmicEnergy.Web.Extensions

@model ListViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "Fast Tracker";
}

@Scripts.Render("~/bundles/moment")
@Scripts.Render("~/bundles/jqueryui")

<script src="~/Scripts/app/utils.js"></script>
<script src="~/Scripts/highcharts/highcharts.js"></script>
<script src="~/Scripts/highcharts/highcharts-3d.js"></script>
<script src="~/Scripts/highcharts/highcharts-more.js"></script>
<script src="~/Scripts/app/dashboard.js"></script>

<div class="row">
    @if (!this.IsSite())
    {
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 box-back">
                @using (Html.BeginForm("SiteSiteSelected", "FastTracker", new { }, FormMethod.Post, new { }))
                {
                    @Html.DropDownListFor(m => m.SiteId, new SelectList(ViewBag.Sites, "Id", "Name"), "-- Please select a Site --", new { @class = "form-control selectpicker", @id = "ddlSite" })
                }
            </div>
        </div>

        if (!Model.Latitude.IsEmpty() && !Model.Longitude.IsEmpty())
        {
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 box-back">
                    @if (!this.IsSite())
                    {
                        <span><a href="http://maps.google.com/?q=@Model.Latitude,@Model.Longitude" target="_blank">@Model.Latitude / @Model.Longitude </a></span>
                    }
                    else
                    {
                        <span>@Model.Latitude / @Model.Longitude</span>
                    }
                </div>
            </div>

            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 box-back">
                    <span style="font-weight: bold;">Stage Reports</span>
                </div>
            </div>
        }
        else
        {
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 box-back">
                    <span style="font-weight: bold;">Stage Reports</span>
                </div>
            </div>
        }
    }
    else
    {
        @Html.HiddenFor(m => m.SiteId)
    }
</div>

<div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 box-back">
        <span style="font-weight: bold; text-align: left !important;">Alarms</span>
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 box-back">

    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 box-back">

    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 box-back">

    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 box-back">

    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 box-back">

    </div>
</div>

<div class="form-group" style="margin-top:15px;">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 box-sub">
        <div class="title blue">
            <h2>TANKS</h2>
        </div>

        @if (Model.Tanks.Any())
            {
            <div class="row" style="margin: 0px !important;">
                @foreach (var tank in Model.Tanks)
                {
                    String color_box = String.Empty;
                    String icon_alarm = String.Empty;

                    if (tank.HasAlarmCritical)
                    {
                        color_box = "box_watervolumepercentage red";
                        icon_alarm = "alarm_critical.png";
                    }
                    else if (tank.HasAlarmHigh)
                    {
                        color_box = "box_watervolumepercentage orange";
                        icon_alarm = "alarm_high.png";
                    }
                    else if (tank.HasAlarmMedium)
                    {
                        color_box = "box_watervolumepercentage yellow";
                        icon_alarm = "alarm_medium.png";
                    }
                    else if (tank.HasAlarmLow)
                    {
                        color_box = "box_watervolumepercentage gray";
                        icon_alarm = "alarm_low.png";
                    }
                    else if (tank.HasAlarmInfo)
                    {
                        color_box = "box_watervolumepercentage white";
                        icon_alarm = "alarm_info.png";
                    }
                    else
                    {
                        color_box = "box_watervolumepercentage blue";
                        icon_alarm = "alarm_no.png";
                    }

                    @*int idx = Model.Tanks.FindIndex(x => x.Id == tank.Id);
                        if (idx == 0 || idx % 5 == 0)
                        {
                            @Html.Raw("<div class='row'>");
                        }*@

                    <div id="tank_@tank.Id" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        @Html.Hidden("tankId", @tank.Id)
                        <div class="row">
                            <img src="@tank.UrlImageTankModel" style="width: 100px; height: 100px; display: block; margin-left: auto; margin-right: auto;" />
                        </div>
                        <div class="row" style="text-align: center;">
                            <span>@tank.Name</span>
                        </div>

                        @{
                            var waterVolumePercentage = @tank.WaterVolumePercentage.HasValue ? @tank.WaterVolumePercentage.ToString() + " %" : "0 %";
                        }

                        <div class="row" style="text-align: center;">
                            <span class="center-block box_watervolumepercentage @color_box">@waterVolumePercentage</span>
                        </div>
                    </div>


                            }
            </div>
                            }
    </div>
</div>

<div class="form-group row" style="margin-top:15px;">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 box-sub">
            <div class="title blue">
                <h2>WATER QUALITY</h2>
            </div>
        </div>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 box-sub">
            <div class="title blue">
                <h2>WT FLOW</h2>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('#ddlSite').on('change', function (event) {
                var form = $(event.target).parents('form');
                form.submit();
            });
        });
    </script>
}
