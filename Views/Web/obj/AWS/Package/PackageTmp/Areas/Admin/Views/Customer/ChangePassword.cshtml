@using KarmicEnergy.Web.Areas.Admin.ViewModels.Customer
@using Munizoft.Extensions

@model ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "Customer - Change Password";
}

@using (Html.BeginForm("ChangePassword", "Customer", new { area = "Admin" }, FormMethod.Post, new { id = "formChangePassword", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
        <div class="form-group">
            <div class="col-md-2 col-lg-2">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            </div>
            <div class="col-md-10 col-lg-10">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", style = "width: 150px;" } })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 col-lg-2">
                @Html.LabelFor(m => m.PasswordConfirm, new { @class = "control-label" })
            </div>
            <div class="col-md-10 col-lg-10">
                @Html.EditorFor(m => m.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", style = "width: 150px;" } })
                @Html.ValidationMessageFor(m => m.PasswordConfirm, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-12 col-lg-12 text-center btn-submit">
        <input type="submit" class="btn btn-default" value="SAVE">
        <a class="btn" href="/Admin/Customer">Cancel</a>
    </div>
}
