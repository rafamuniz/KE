@using KarmicEnergy.Web.Areas.Admin.ViewModels.User
@using Munizoft.Extensions

@model CreateViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "User - Create";
}

@using (Html.BeginForm("Create", "User", new { area = "Admin" }, FormMethod.Post, new { id = "formCreateUser", enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_Error")

    <div class="form-horizontal">
        <div class="col-md-12 form-group">
            <div class="col-md-1">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            </div>
            <div class="col-md-11">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12 form-group">
            <div class="col-md-1">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            </div>
            <div class="col-md-11 form-group">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            @*<div class="col-md-12 form-group">
                    <div class="col-md-1">
                        @Html.LabelFor(m => m.Image, new { @class = "control-label" })
                    </div>
                    <div class="col-md-11 form-group">
                        <input type="file" name="Image" />
                        @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div class="col-md-12 form-group">
                <div class="col-md-1">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                </div>
                <div class="col-md-11">
                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12 form-group">
                <div class="col-md-1">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                </div>
                <div class="col-md-11">
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", style = "width: 150px;" } })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12 form-group">
                <div class="col-md-1">
                    @Html.LabelFor(m => m.PasswordConfirm, new { @class = "control-label" })
                </div>
                <div class="col-md-11">
                    @Html.EditorFor(m => m.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", style = "width: 150px;" } })
                    @Html.ValidationMessageFor(m => m.PasswordConfirm, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12 form-group">
                <div class="col-md-1">
                    @Html.LabelFor(m => m.Role, new { @class = "control-label" })
                </div>
                <div class="col-md-11">
                    @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.AdminRoles, "Id", "Name"), "-- Please select a Role--", new { @class = "form-control selectpicker", style = "width: 250px;", id = "ddlRole" })
                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12 form-group text-center">
                <input type="submit" class="btn btn-default" value="SAVE">
                <a class="btn" href="/Admin/User/Index">Cancel</a>
            </div>
        </div>
    </div>
}
