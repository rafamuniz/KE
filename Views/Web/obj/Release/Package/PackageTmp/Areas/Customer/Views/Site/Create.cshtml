@using KarmicEnergy.Web.Areas.Customer.ViewModels.Site
@using Munizoft.Extensions

@model CreateViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "Site - Create";
}

@using (Html.BeginForm("Create", "Site", new { area = "Customer" }, FormMethod.Post, new { id = "formCreateUser", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_Error")

    <div class="col-md-1">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
    </div>
    <div class="col-md-11 form-group">
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-1">
        @Html.LabelFor(m => m.IPAddress, new { @class = "control-label" })
    </div>
    <div class="col-md-11 form-group">
        @Html.EditorFor(m => m.IPAddress, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", @id = "txtIPAddress" } })
        @Html.ValidationMessageFor(m => m.IPAddress, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-1">
        @Html.LabelFor(m => m.Status, new { @class = "control-label" })
    </div>
    <div class="col-md-11 form-group">
        @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.Statuses, "Id", "Name", "A"), "-- Please select a Status--", new { @class = "form-control selectpicker", style = "width: 250px;", id = "ddlStatus" })
        @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-12 form-group text-center">
        <input type="submit" class="btn btn-default" value="SAVE">
        <a class="btn" href="/Customer/Site/">Cancel</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/inputmask")
    <script type="text/javascript">
        $(function () {
            $("#txtIPAddress").mask("999.999.999.999");
        });
    </script>
}