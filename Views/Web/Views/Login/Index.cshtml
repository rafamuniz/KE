@using KarmicEnergy.Web.ViewModels.Account
@using Munizoft.Extensions

@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginMaster.cshtml";
    ViewBag.Title = "Login";
}

<div class="login-logo">
    <img src="~/images/login_logo.png">
</div><!-- /.login-logo -->

<div class="login-box">
    @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "formLogin", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @*@Html.Partial("_Error")*@

    if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Count() > 0))
    {
        <div class="alert alert-danger">
            <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @Html.ValidationSummary(false, "Errors: ", new { @class = "text-danger" })
        </div>
    }

    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <div class="form-group">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "email-input", placeholder = AttributeExtension.GetDisplayAttributeNameValue<LoginViewModel>(m => m.Email) } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row" >
        <div class="col-lg-4 col-lg-offset-4">
            <div class="form-group">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "password-input", placeholder = AttributeExtension.GetDisplayAttributeNameValue<LoginViewModel>(m => m.Password) } })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

        <div class="row" style="width: 106%">
            <div class="col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <input type="submit" class="login-button" value="LOGIN">
                </div>
            </div><!-- /.col -->
        </div>
    }
</div><!-- /.login-box-body -->
