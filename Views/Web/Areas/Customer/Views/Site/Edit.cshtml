@using KarmicEnergy.Web.Areas.Customer.ViewModels.Site
@using Munizoft.Extensions

@model EditViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "Site - Edit";
}

@using (Html.BeginForm("Edit", "Site", new { area = "Customer" }, FormMethod.Post, new { id = "formEditUser", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
            <div class="col-md-2 col-lg-2">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            </div>
            <div class="col-md-10 col-lg-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<CreateViewModel>(m => m.Name) } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 col-lg-2">
                @Html.LabelFor(m => m.IPAddress, new { @class = "control-label" })
            </div>
            <div class="col-md-10 col-lg-10">
                @Html.EditorFor(m => m.IPAddress, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", @id = "txtIPAddress", placeholder = AttributeExtension.GetDisplayAttributeNameValue<CreateViewModel>(m => m.IPAddress) } })
                @Html.ValidationMessageFor(m => m.IPAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 col-lg-2">
                @Html.LabelFor(m => m.Status, new { @class = "control-label" })
            </div>
            <div class="col-md-10 col-lg-10">
                @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.Statuses, "Id", "Name"), "-- Please select a Status--", new { @class = "form-control selectpicker", style = "width: 250px;", id = "ddlStatus" })
                @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-lg-10">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3 col-lg-2">
                            @Html.LabelFor(m => m.Latitude, new { @class = "control-label" })
                        </div>
                        <div class="col-md-9 col-lg-10">
                            @Html.EditorFor(m => m.Latitude, new { htmlAttributes = new { @class = "form-control", id = "txtLatitude" } })
                            @Html.ValidationMessageFor(m => m.Latitude, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3 col-lg-2">
                            @Html.LabelFor(m => m.Longitude, new { @class = "control-label" })
                        </div>
                        <div class="col-md-9 col-lg-10">
                            @Html.EditorFor(m => m.Longitude, new { htmlAttributes = new { @class = "form-control", id = "txtLongitude" } })
                            @Html.ValidationMessageFor(m => m.Longitude, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-2 col-lg-2">
                <a id="archorMap" style="display: none;" target="_blank">
                    <img id="imgMap" src="~/images/map_icon.png" style="width: 100%; height: 100%;" />
                </a>
            </div>
        </div>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="box-sub">
            <div class="title green">
                <h2>Info</h2>
            </div>

            @Html.Partial("_Address", Model.Address, new ViewDataDictionary() { TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "Address" } })
        </div>
    </div>

    <div class="col-md-12 col-lg-12 text-center btn-submit">
        <input type="submit" class="btn btn-default" value="SAVE">
        <a class="btn" href="/Customer/Site">Cancel</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery-mask")
    <script type="text/javascript">
        $(function () {
            $("#txtIPAddress").mask("999.999.999.999");
        });
    </script>
}