@using KarmicEnergy.Web.ViewModels.Account

@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change password";
}

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-lg-2 text-right">
            @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
        </div>
        <div class="col-lg-10 form-group">
            @Html.EditorFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2 text-right">
            @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
        </div>
        <div class="col-lg-10 form-group">
            @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2 text-right">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        </div>
        <div class="col-lg-10 form-group">
            @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 form-group text-center">
            <input type="submit" class="btn btn-default" value="Change">
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
