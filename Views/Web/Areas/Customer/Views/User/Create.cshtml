@using KarmicEnergy.Web.ViewModels.User
@using Munizoft.Extensions

@model CreateViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "USER - CREATE";
}
<div id="body-content">
    @using (Html.BeginForm("Create", "User", new { }, FormMethod.Post, new { id = "formCreateUser", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_Error")

        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            </div>
            <div class="col-sm-10">
                <div class="form-group">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<CreateViewModel>(m => m.Name) } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            </div>
            <div class="col-lg-10 form-group">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<CreateViewModel>(m => m.Email) } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            </div>
            <div class="col-lg-10 col-lg-offset-4 form-group">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", style = "width: 150px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<CreateViewModel>(m => m.Password) } })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(m => m.PasswordConfirm, new { @class = "control-label" })
            </div>
            <div class="col-lg-10 form-group">
                @Html.EditorFor(m => m.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", style = "width: 150px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<CreateViewModel>(m => m.PasswordConfirm) } })
                @Html.ValidationMessageFor(m => m.PasswordConfirm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(m => m.Role, new { @class = "control-label" })
            </div>
            <div class="col-lg-10 form-group">
                @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.Roles, "Id", "Name"), "-- Please select a Role--", new { @class = "form-control selectpicker", style = "width: 100px;", id = "ddlRole" })
                @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 form-group">
                <input type="submit" class="btn btn-default" value="SAVE">
            </div>
        </div>
    }
</div>