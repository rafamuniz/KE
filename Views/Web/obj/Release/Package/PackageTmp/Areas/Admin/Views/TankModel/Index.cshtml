@using KarmicEnergy.Web.Areas.Admin.ViewModels.TankModel
@using Munizoft.Extensions
@using Munizoft.MVC.Helpers
@using GridMvc.Html

@model List<ListViewModel>

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "Tank Model";
}

@Styles.Render("~/Content/grid")

<div class="pull-right">
    @Html.NoEncodeActionLink("<span>CREATE</span>", "Add new Tank", "Create", "TankModel", routeValues: new { area = "Admin" }, htmlAttributes: new { @class = "btn" })
</div>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add()
        .Titled("Image")
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(100)
        .RenderValueAs(o => @<img src="~/images/tank_models/@o.ImageFileName" width="50" height="50"></img>);

    columns.Add(c => c.Name).Titled("Name")
         .Filterable(true);

    columns.Add(c => c.Status).Titled("Status")
     .Filterable(true);

    columns.Add()
     .Encoded(false)
     .Sanitized(false)
     .SetWidth(30)
     .RenderValueAs(o => @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "TankModel", routeValues: new { id = o.Id, area = "Admin" }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" }));

    columns.Add()
     .Encoded(false)
     .Sanitized(false)
     .SetWidth(30)
     .RenderValueAs(o => @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "TankModel", routeValues: new { id = o.Id, area = "Admin" }, htmlAttributes: new { data_modal = "", @class = "btn btn-default", onclick = "return confirm('Are you sure you wish to delete this registry?');" }));

}).WithPaging(10).Sortable(true).Filterable().WithMultipleFilters()
</div>

@section Scripts {
    @Scripts.Render("~/bundles/grid")
}