@using KarmicEnergy.Web.Areas.Admin.ViewModels.User
@using Munizoft.Extensions

@model ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "User - Change Password";
}

@using (Html.BeginForm("ChangePassword", "User", new { area = "Admin" }, FormMethod.Post, new { id = "formChangePassword", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="row">

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">

            <div class="form-group">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = AttributeExtension.GetDisplayAttributeNameValue<ChangePasswordViewModel>(m => m.Password) } })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    @Html.EditorFor(m => m.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", placeholder = AttributeExtension.GetDisplayAttributeNameValue<ChangePasswordViewModel>(m => m.PasswordConfirm) } })
                    @Html.ValidationMessageFor(m => m.PasswordConfirm, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 btn-submit text-center">
        <input type="submit" class="btn btn-default" value="SAVE">        
        <a class="btn" href="~/Home/Index">Cancel</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}