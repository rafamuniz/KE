@using KarmicEnergy.Web.Areas.Admin.ViewModels.User
@using Munizoft.Extensions

@model EditViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "User - Edit";
}

@using (Html.BeginForm("Edit", "User", new { area = "Admin" }, FormMethod.Post, new { id = "formEditUser", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_Error")

    @Html.HiddenFor(m => m.Id)

    <div class="col-md-1">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
    </div>
    <div class="col-md-11 form-group">
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<EditViewModel>(m => m.Name) } })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-1">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
    </div>
    <div class="col-md-11 form-group">
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<EditViewModel>(m => m.Email) } })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    
    <div class="col-md-1">
        @Html.LabelFor(m => m.Role, new { @class = "control-label" })
    </div>
    <div class="col-md-11 form-group">
        @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.AdminRoles, "Id", "Name"), "-- Please select a Role--", new { @class = "form-control selectpicker", style = "width: 250px;", id = "ddlRole" })
        @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-12 form-group text-center">
        <input type="submit" class="btn btn-default" value="SAVE">
        <a class="btn" href="/Admin/User/">Cancel</a>
    </div>
}
