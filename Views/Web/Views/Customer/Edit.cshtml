@using KarmicEnergy.Web.ViewModels.Customer
@using Munizoft.Extensions

@model EditViewModel

@{
    Layout = "~/Views/Shared/_Internal.cshtml";
    ViewBag.Title = "CUSTOMER - EDIT";
}
<div id="body-content">
    @using (Html.BeginForm("Edit", "Customer", new { }, FormMethod.Post, new { id = "formCreateCustomer", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_Error")

        @Html.HiddenFor(m => m.Id)

        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            </div>
            <div class="col-sm-10">
                <div class="form-group">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<EditViewModel>(m => m.Name) } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            </div>
            <div class="col-lg-10 form-group">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", placeholder = AttributeExtension.GetDisplayAttributeNameValue<EditViewModel>(m => m.Email) } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 form-group">
                <input type="submit" class="btn btn-default" value="SAVE">
            </div>
        </div>
    }
</div>